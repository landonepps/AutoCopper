{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*.supremenewyork.com/shop/*",
    "https://*.supremenewyork.com/shop/*",
    "storage",
    "webNavigation",
    "webRequest"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.supremenewyork.com/shop/*",
        "https://*.supremenewyork.com/shop/*"
      ],
      "js": [
        "libs/js/jquery/jquery.min.js",
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "38": "images/icon-38.png"
    },
    "default_title": "__MSG_appName__",
    "default_popup": "popup.html"
  }
}
